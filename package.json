{
  "name": "notwrapper-mvp",
  "version": "1.0.0",
  "description": "NotWrapper - Detect AI wrapper tools",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:web": "cd apps/web && npm run dev",
    "dev:mobile": "cd apps/mobile && npm start",
    "dev:backend": "cd apps/backend && npm run dev",
    "dev:analyzer": "cd apps/analyzer && python app.py",
    "build:web": "cd apps/web && npm run build",
    "install:all": "npm install && cd apps/web && npm install && cd ../mobile && npm install && cd ../backend && npm install"
  }
}

